{
  "name": "react-slidy",
  "version": "4.0.0",
  "main": "lib/",
  "keywords": [
    "slider",
    "react",
    "lory",
    "slidy",
    "react-lory",
    "react-slidy"
  ],
  "scripts": {
    "clean:lib": "rimraf ./lib/*",
    "deploy": "NODE_ENV=production npm run dist && surge ./docs react-slidy.surge.sh",
    "dev": "parcel docs/index.html",
    "lib": "npm run lib:scripts && npm run lib:styles",
    "lib:scripts": "babel src --out-dir lib",
    "lib:styles": "copyfiles -u 1 './src/**/*.scss' lib",
    "lint": "npm run lint:js && npm run lint:sass",
    "lint:js": "sui-lint js",
    "lint:sass": "sui-lint sass",
    "prelib": "npm run clean:lib -s",
    "prepublish": "npm run lib"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:miduga/react-slidy.git"
  },
  "peerDependencies": {
    "prop-types": "15",
    "react": "0.14 || 15 || 16"
  },
  "devDependencies": {
    "@s-ui/lint": "2",
    "babel-cli": "6",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "copyfiles": "1.2.0",
    "highlight.js": "9.10.0",
    "js-beautify": "1.6.12",
    "jsx-to-string": "1.1.0",
    "node-sass": "4.7.2",
    "opener": "1.4",
    "parcel-bundler": "1.6.2",
    "prop-types": "15",
    "react": "16",
    "react-dom": "16",
    "react-lowlight": "2.0.0",
    "react-router": "3",
    "react-syntax-highlighter": "5.1",
    "rimraf": "2.5.4"
  },
  "dependencies": {
    "intersection-observer": "0.5.0",
    "just-debounce-it": "^1.0.1",
    "smoothscroll-polyfill": "^0.4.3"
  },
  "pre-commit": [
    "lint",
    "test",
    "dist"
  ],
  "eslintConfig": {
    "extends": [
      "./node_modules/@s-ui/lint/eslintrc.js"
    ]
  },
  "sasslintConfig": "./node_modules/@s-ui/lint/sass-lint.yml"
}
